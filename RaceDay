let raceNumber = Math.floor(Math.random() * 1000);

let registeredEarly = false;

const runnerAge = 19

if (runnerAge>18 && registeredEarly){
  raceNumber+=1000;
}
if (runnerAge>18 && registeredEarly) {
  console.log(`Runner:${runnerAge}: Your race starts at 9:30`);
  
} else if (runnerAge>18 && !registeredEarly) {
  console.log(`Runner:${runnerAge}: Your race starts at 11:00`);
  
} else if (runnerAge < 18) {
  console.log(`Runner:${runnerAge}: Your race starts at 12:30`)
}
